        <!-- Defines the main content area of the store locator page -->
        <referenceContainer name="content">
            <block name="storelocator.content" template="Gustav_Thesis::storelocator.phtml">
                <block class="Gustav\Thesis\Block\Frontend\Stores" name="store.list" template="Gustav_Thesis::stores.phtml" />
                <block class="Gustav\Thesis\Block\Frontend\Maps" name="store.map" template="Gustav_Thesis::maps.phtml" />
            </block>
        </referenceContainer>
    </body>
</page>
